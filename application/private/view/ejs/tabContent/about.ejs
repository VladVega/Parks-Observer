<div class="row-fluid">
    <div class="span12"></div>

    <h3 class="span12  subheader">About the Project:</h3>
    <div class="span6"><p><%= typeConfig.about.text %></p></div>
    <div class="span3"><img src="<%= typeConfig.about.images.main %>"/></div>
    <div class="span3"></div>

    <h3 class="span12 subheader">How to Use This Website:</h3>
    <div class="span6">
        <p>
            <ul>
                <li>
                    Navigate through the website using the green navigation menu at the top.
                </li>
                <li>
                    Use the <b>Map</b> and <b>List</b> sections to view organized observational. data and <b>Add Tab</b> to put in your own.
                </li>
                <li>
                    Use the <b>Add</b> section to put in your own observation.
                </li>
                <li>
                    Click on the words <b>Need Help?</b> to see instructions specific to the that tab.
                </li>
            </ul>
        </p>
    </div>
    <div class="span3"><img src="<%= typeConfig.about.images.user %>"/></div>

    <div class="span3"></div>

    <div class="span12"></div>
    <h3 id="team" class="span12 subheader">Team:</h3>

    <% var title,member, team= typeConfig.about.team;
        for (title in team){
            member= team[title]    %>

        <div class="span6"><b><%= title %>:</b><br>
        <!--<%= member.name %><br>-->
        <%= member.text %><br>
        <a href="mailto:<%= member.email %>"><%= member.email %></a></div>
        <div class="span3"><img height="100px" width="100px" src="<%= member.photo %>"/></div>
        <div class="span3"></div>
        <div class="span12"></div>

    <% } %>

</div>


